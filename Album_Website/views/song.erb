<h2>Song: <%= @song.name %></h2>
<h3>Album: <%= @song.album.name %></h3>
<h4>Lyrics: <%= @song.other_info["lyrics"] %></h4>
<h4>Other info: <%= @song.other_info["info"] %></h4>

<form action="/albums/<%= @song.album.id %>/songs/<%= @song.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename song</label>
  <input id="name" name="name" type="text">

  <label for="lyrics">Add lyrics</label>
  <input id="lyrics" name="lyrics" type="text">

  <label for="info">Add info</label>
  <input id="info" name="info" type="text">

  <button type="submit">Update song</button>
</form>

<form action="/albums/<%= @song.album.id %>/songs/<%= @song.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete song</button>
</form>

<a href="/albums/<%= @song.album.id %>">Back to <%= @song.album.name %></a>