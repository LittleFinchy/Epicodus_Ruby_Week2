<h1>Music Festival Stages</h1>

<% if @stages.any? %>
  <ul>
    <% @stages.each do |stage| %>
      <li><a href="/stages/<%= stage.id %>"><%= stage.stage_name %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>There are currently no stages to display.</p>
<% end %>

<a href="/stages/new">Add a new stage</a>
