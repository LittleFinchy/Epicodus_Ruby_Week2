<h2>Artist: <%= @artist.name %></h2>
<h3>Stage: <%= @artist.stage.stage_name %></h3>

<form action="/stages/<%= @artist.stage.id %>/artists/<%= @artist.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename Artist</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update Artist</button>
</form>

<form action="/stages/<%= @artist.stage.id %>/artists/<%= @artist.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete Artist</button>
</form>

<a href="/stages/<%= @artist.stage.id %>">Back to <%= @artist.stage.stage_name %></a>