<h2>Message: <%= @message.content %></h2>
<h4>Board: <%= @message.board.name %></h4>

<form action="/boards/<%= @message.board.id %>/messages/<%= @message.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="content">Rename message</label>
  <input id="content" name="content" type="text">

  <button type="submit">Update message</button>
</form>

<form action="/boards/<%= @message.board.id %>/messages/<%= @message.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete message</button>
</form>

<a href="/boards/<%= @message.board.id %>">Back to <%= @message.board.name %></a>
